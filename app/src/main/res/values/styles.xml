<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LevelButton" parent="TextAppearance.AppCompat.Widget.Button.Colored">
    </style>

    <style name="buttonAccent" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@drawable/rounded_corners_accent</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
